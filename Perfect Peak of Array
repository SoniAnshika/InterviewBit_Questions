int Solution::perfectPeak(vector<int> &A) {
    int n=A.size();
    vector<int> pref(n),suff(n);
    
    pref[0]=A[0];
    suff[n-1]=A[n-1];
    
    for(int i=1;i<n;i++) 
        pref[i]=max(pref[i-1],A[i]);
        
    for(int i=n-2;i>=0;i--) 
        suff[i]=min(suff[i+1],A[i]);
        
    for(int i=1;i<(n-1);i++)
    {
        if(pref[i-1]<A[i] and suff[i+1]>A[i] and A[i]!=suff[i+1]) 
            return 1;
    }
    
    return 0;
}
